{
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useBlockStatements": "error",
				"useShorthandArrayType": "error",
				"noShoutyConstants": "warn"
			},

			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			},

			"a11y": {
				"useButtonType": "off",
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	}
}
